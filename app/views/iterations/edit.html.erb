<h1>Editing iteration</h1>

<%= form_for @iteration, :url => {:action => :create, :id => @project.id } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @iteration %> |
<%= link_to 'Back', iterations_path %>
